{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/0b59c899-6cd9-4a74-9eb5-acf2cbb48cb3')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/0b59c899-6cd9-4a74-9eb5-acf2cbb48cb3')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2023-02-01-preview",
      "properties": {
        "displayName": "Active Test - Kerberoasting",
        "description": "",
        "alertDetailsOverride": {
          "alertDescriptionFormat": "{{ServiceNames}} ",
          "alertDisplayNameFormat": "Active Test - {{CustomerName}} test kerberoasting {{{destinationUserName_s}} ",
          "alertDynamicProperties": null,
          "alertSeverityColumnName": null,
          "alertTacticsColumnName": null
        },
        "customDetails": {},
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "incidentConfiguration": {
          "createIncident": false,
          "groupingConfiguration": {
            "enabled": false,
            "groupByAlertDetails": [],
            "groupByCustomDetails": [],
            "groupByEntities": [],
            "lookbackDuration": "PT5H",
            "matchingMethod": "AllEntities",
            "reopenClosedIncident": false
          }
        },
        "query": "union workspace(\"obrela-mssp\").cross_workspace_cef_correlation\r\n| extend customerURI=strcat(\"/All Customers/Customers/\",CustomerName)\r\n| where fileName_s == \"Kerberoasting - Weak Encryption\"\r\n| extend customerURI=customerURI_s\r\n| summarize ServiceNames = make_set(destinationServiceName_s) by tostring(CustomerName), sourceAddress_s, destinationUserName_s\r\n| where array_length(ServiceNames) > 0\r\n",
        "queryPeriod": "PT5M",
        "queryFrequency": "PT5M",
        "sentinelEntitiesMappings": null,
        "severity": "Medium",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": [],
        "techniques": [],
        "templateVersion": null,
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0,
        "alertRuleTemplateName": null,
        "enabled": true
      }
    }
  ]
}