{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/3de98d99-8f5c-41b6-8138-7e059fcdfca9')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/3de98d99-8f5c-41b6-8138-7e059fcdfca9')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2023-02-01-preview",
      "properties": {
        "displayName": "Active Test - BruteForce Aggregation - SIngle User Multiple Sources",
        "description": "",
        "alertDetailsOverride": {
          "alertDescriptionFormat": "The following IPs have been identified {{UserSet}} ",
          "alertDisplayNameFormat": "Active Test - {{CustomerName}} - USER - A possible brute-force has been identified targetting user: {{destinationUserName_s}}  on {{Product}} ",
          "alertDynamicProperties": null,
          "alertSeverityColumnName": null,
          "alertTacticsColumnName": null
        },
        "customDetails": {
          "CustomerName": "CustomerName",
          "CustomerURI": "customerURI",
          "Count_s": "count_",
          "Product": "Product"
        },
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "incidentConfiguration": {
          "createIncident": false,
          "groupingConfiguration": {
            "enabled": false,
            "groupByAlertDetails": [],
            "groupByCustomDetails": [],
            "groupByEntities": [],
            "lookbackDuration": "PT5H",
            "matchingMethod": "AllEntities",
            "reopenClosedIncident": false
          }
        },
        "query": "union workspace(\"obrela-mssp\").cross_workspace_cef_correlation\r\n| where categoryBehavior_s == \"/Authentication/Verify\" and categoryOutcome_s == \"/Failure\"\r\n| where not(isempty(sourceAddress_s))\r\n| extend Product = categoryDeviceGroup_s\r\n| summarize count(), UserSet=make_set(sourceAddress_s) by tostring(CustomerName), destinationUserName_s, deviceProduct_s, Product\r\n| where count_ > 18\r\n| extend customerURI=strcat(\"/All Customers/Customers/\",CustomerName)",
        "queryPeriod": "PT15M",
        "queryFrequency": "PT15M",
        "sentinelEntitiesMappings": null,
        "severity": "Medium",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": [],
        "techniques": [],
        "templateVersion": null,
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0,
        "alertRuleTemplateName": null,
        "enabled": true
      }
    }
  ]
}