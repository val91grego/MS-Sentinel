{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspace": {
            "type": "String"
        }
    },
    "resources": [
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/2a67c9ae-f683-487d-a7f8-711168e87a7c')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/2a67c9ae-f683-487d-a7f8-711168e87a7c')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
            "kind": "Scheduled",
            "apiVersion": "2022-09-01-preview",
            "properties": {
                "displayName": "AAD - BitLocker Key Access",
                "description": "AAD - BitLocker Key Access",
                "severity": "High",
                "enabled": true,
                "query": "cross_workspace_auditlogs\n| where OperationName in (\"Delete BitLocker key\", \"Read BitLocker key\")\n| where Result == \"success\"\n| extend ActorIP = tostring(parse_json(tostring(InitiatedBy.user)).ipAddress)\n| extend Actor = tostring(parse_json(tostring(InitiatedBy.user)).userPrincipalName)\n| extend TargetResourcedisplayName = tostring(TargetResources[0].displayName)\n| extend Actorid = tostring(parse_json(tostring(InitiatedBy.user)).id)\n| extend categoryTechnique = '/Exploit/Privilege Escalation'\n| project\n    TimeGenerated,\n    CustomerName,\n    OperationName,\n    Actor,\n    ActorIP,\n    Actorid,\n    LoggedByService,\n    categoryTechnique",
                "queryFrequency": "PT1H",
                "queryPeriod": "PT1H",
                "triggerOperator": "GreaterThan",
                "triggerThreshold": 0,
                "suppressionDuration": "PT5H",
                "suppressionEnabled": false,
                "tactics": [
                    "DefenseEvasion"
                ],
                "techniques": [
                    "T1134"
                ],
                "alertRuleTemplateName": null,
                "incidentConfiguration": {
                    "createIncident": false,
                    "groupingConfiguration": {
                        "enabled": false,
                        "reopenClosedIncident": false,
                        "lookbackDuration": "PT5H",
                        "matchingMethod": "AllEntities",
                        "groupByEntities": [],
                        "groupByAlertDetails": [],
                        "groupByCustomDetails": []
                    }
                },
                "eventGroupingSettings": {
                    "aggregationKind": "AlertPerResult"
                },
                "alertDetailsOverride": {
                    "alertDisplayNameFormat": "AAD - Access to BitLocker Key - Action:{{OperationName}}",
                    "alertDescriptionFormat": "User \"{{Actor}}\" performed an action (read or delete) to BitLocker Key using Device Portal from IP \"{{ActorIP}}\". BitLocker Key considered as a resource inside custmer's Tenant."
                },
                "customDetails": {
                    "CustomerName": "CustomerName",
                    "categoryTechnique": "categoryTechnique"
                },
                "entityMappings": [
                    {
                        "entityType": "Account",
                        "fieldMappings": [
                            {
                                "identifier": "FullName",
                                "columnName": "Actor"
                            },
                            {
                                "identifier": "Sid",
                                "columnName": "Actorid"
                            }
                        ]
                    },
                    {
                        "entityType": "IP",
                        "fieldMappings": [
                            {
                                "identifier": "Address",
                                "columnName": "ActorIP"
                            }
                        ]
                    }
                ],
                "sentinelEntitiesMappings": null
            }
        },
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/2a67c9ae-f683-487d-a7f8-711168e87a7c/actions/736a28037a4a4592adf0db143fbced4e')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/2a67c9ae-f683-487d-a7f8-711168e87a7c/736a28037a4a4592adf0db143fbced4e')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules/actions",
            "apiVersion": "2022-09-01-preview",
            "properties": {
                "ruleId": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/2a67c9ae-f683-487d-a7f8-711168e87a7c')]",
                "triggerUri": "[listCallbackURL(concat('/subscriptions/6e5d5798-a0c1-4a69-8ec7-d5f43295a74e/resourceGroups/Obrela-MSSP/providers/Microsoft.Logic/workflows/test-strevinas-incidents','/triggers/Microsoft_Sentinel_alert'),'2016-06-01').value]",
                "logicAppResourceId": "/subscriptions/6e5d5798-a0c1-4a69-8ec7-d5f43295a74e/resourceGroups/Obrela-MSSP/providers/Microsoft.Logic/workflows/test-strevinas-incidents",
                "operatesOn": "Alert"
            },
            "dependsOn": [
                "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/2a67c9ae-f683-487d-a7f8-711168e87a7c')]"
            ]
        }
    ]
}
